<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#444444" /> <!-- Slightly lighter placeholder color for focus -->
            <stroke android:width="3dp" android:color="#FFFFFF" /> <!-- White border on focus -->
            <size android:width="320dp" android:height="180dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333" /> <!-- Placeholder color -->
            <size android:width="320dp" android:height="180dp" />
        </shape>
    </item>
</selector>
